#include <iostream>

using namespace std;
enum STANJE{UPALJENA,ISKLJUCENA,POKVARENA};

class Rerna{
private:
    STANJE stanje;
    int temperatura;
public:
    Rerna(){
        stanje = ISKLJUCENA;
        temperatura = temp;
    }
    Rerna(STANJE st,int temp){
        stanje = st;
        temperatura = temp;
    }
    Rerna(const Rerna &kopijaZaRernu){
        stanje = kopijaZaRernu.stanje;
        temperatura = kopijaZaRernu.temperatura;
    }
    void set_stanje(STANJE st){
        stanje = st;
    }
    bool set_temperatura(int temp){
        if(0 < temp && temp < 221){
            temperatura = temp;
            return true;
        }
        return false;
    }
    
     string get_stanje()const{
        string temp;
    switch(stanje){
    case 1:
        temp = "upaljena";
        break;
    case 2:
        temp = "iskljucena";
        break;
    case 3:
        temp = "pokvarena";
        break;
    default:
        temp = "neodredjeno";
        break;

        }
        return temp;
    }
    
    int get_temperatura()const{
        return temperatura;
    }
     bool pojacajTemp(){
        if(temperatura < 201){
            temp += 20;
            return true;
        }
        return false;
    }
    bool smanjiTemp(){
        if(temperatura > 19){
            temp -=20;
            return true;
        }
        return false;
    }
    bool ukljuci(){
        if(stanje == ISKLJUCENA){
            if(temperatura == 0){
                    pojacajTemp();
            }
                stanje = UPALJENA;
            return true;
            
        }
        return false;
    }
    bool iskljuci(){
        if(stanje == UPALJENA){
            while(temperatura != 0){
                smanjiTemp();
            }
            stanje = ISKLJUCENA;
            return true;
        }
        return false;
    }
};
int main()
{
    
    return 0;
}
